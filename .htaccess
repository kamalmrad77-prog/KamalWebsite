RewriteEngine On

# Redirect .html URLs to clean URLs first
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Handle clean URLs and route to .html files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^.]+)$ $1.html [NC,L]

# Force redirect from index.html to home
RewriteRule ^index\.html$ /home [R=301,L]

# Force redirect from specific files to clean URLs
RewriteRule ^home\.html$ /home [R=301,L]
RewriteRule ^results\.html$ /results [R=301,L]